#!/bin/bash

# Location to store any data generated by these scripts with
# subfolders for each GlobalPhone language.
DATA=/disk/scratch/s1680167/zero/data/word_pairs

# Temporary file directory
TMP=/tmp

# String used to delimit values in various files.
export DELIMITER="###"

##########
# Corpus #
##########

# Folder with forced alignments in .ctm format.
# Should have a subfolder for each language.
GP_ALIGNMENTS=/group/project/cstr2/enno/zero/data/gp_alignments

################
# Dependencies #
################

# Kaldi root directory
KALDI=/group/project/cstr2/enno/kaldi

# Kaldi GlobalPhone recipe
KALDI_GP=$KALDI/egs/gp/s5

# speech_dtw directory (https://github.com/eginhard/speech_dtw)
SPEECH_DTW=$HOME/zero/speech_dtw

# bucktsong_segmentalist directory
# (https://github.com/eginhard/bucktsong_segmentalist)
BUCKTSONG_SEGMENTALIST=$HOME/zero/bucktsong_segmentalist